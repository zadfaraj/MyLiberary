<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb3"
    android:orientation="vertical"
    tools:context=".ShowBooks">

    <TextView
        android:id="@+id/book_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:background="@drawable/bookshowtitle1"
        android:gravity="bottom|center_horizontal"
        android:text="TextView"
        android:textColor="@color/ansar_yellow"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="8.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jalal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/jalal"
                android:textColor="@color/black"
                android:textColorLink="#FF3F51B5"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/writer_Book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="متولد: 2 آذر 1302 تهران"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/motarjem_Book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="درگذشت: 18 شهریور 1348 گیلان-اسالم"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/ravi_Book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="آرامگاه: شهرری-مسجد فیروزآبادی"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/entesharat_Book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="پیشه: نویسنده، مترجم، منتقد، دبیر"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="مکتب: رئالیسم"
                android:textColor="@color/black" />


        </LinearLayout>

        <ImageView
            android:id="@+id/image_Book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="5.5"
            android:scaleType="fitXY"
            android:src="@drawable/jalal" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="3dp"
        android:background="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="@string/matne_zaneziadi"
            android:textSize="15sp"/>

    </ScrollView>

    <Button
        android:id="@+id/button14"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="3dp"
        android:layout_weight="1.3"
        android:background="@drawable/ansarframe"
        android:onClick="btn_rezerv"
        android:text="@string/rezerve_ketab"
        android:textStyle="bold" />

</LinearLayout>